
#----------------------------------------------------------------------------------------------------------------------------------------------
# TERMINAL
#----------------------------------------------------------------------------------------------------------------------------------------------


super + Return
	kitty



#----------------------------------------------------------------------------------------------------------------------------------------------
# ROFI
#----------------------------------------------------------------------------------------------------------------------------------------------


super + d
	rofi -modi run,drun -show drun -columns 1 -width 24 -lines 8 -padding 45 -hide-scrollbar -show-icons -drun-icon-theme "Zafiro"


#----------------------------------------------------------------------------------------------------------------------------------------------
# RESTART AND QUIT
#----------------------------------------------------------------------------------------------------------------------------------------------


super + shift + r
	bspc wm -r


super + shift + s
	pkill -USR1 -x sxhkd



super + shift + e
    bspc quit



super + shift + q
	bspc node -c



#----------------------------------------------------------------------------------------------------------------------------------------------
# MODES
#----------------------------------------------------------------------------------------------------------------------------------------------



super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}



#----------------------------------------------------------------------------------------------------------------------------------------------
# FOCUS/MOVE
#----------------------------------------------------------------------------------------------------------------------------------------------

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}


super + Tab
	bspc node -f {next,prev}.local



#----------------------------------------------------------------------------------------------------------------------------------------------
# RESIZE
#----------------------------------------------------------------------------------------------------------------------------------------------



super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}




#----------------------------------------------------------------------------------------------------------------------------------------------
# KEYBINDS USER
#----------------------------------------------------------------------------------------------------------------------------------------------

super + c
	chromium


super + e
        polo

super + m
    virt-manager

Print
    flameshot gui



#----------------------------------------------------------------------------------------------------------------------------------------------
# BRIGHTNESS AND VOLUME
#----------------------------------------------------------------------------------------------------------------------------------------------

#Brightness control
XF86MonBrightnessDown
	brightnessctl -s s 10%-
XF86MonBrightnessUp
	brightnessctl -s s 10%+

#Volume Control
XF86AudioLowerVolume
	amixer set Master 5%-
XF86AudioRaiseVolume
	amixer set Master 5%+
XF86AudioMute
        amixer set Master toggle




#----------------------------------------------------------------------------------------------------------------------------------------------
# WORLSPACES
#----------------------------------------------------------------------------------------------------------------------------------------------


super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'
