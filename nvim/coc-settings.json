{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "sql": {
            "command": "sql-language-server",
            "args": [
                "up",
                "--method",
                "stdio"
            ],
            "filetypes": [
                "sql",
                "mysql",
                "postgresql"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        }
    },
    "html.enable": true,
    "html.autoClosingTags": false,
    "html.filetypes": [
        "html",
        "handlebars",
        "vue",
        "javascript",
        "typescript",
        "htmldjango"
    ],
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.formatOnType": true,
    "diagnostic.displayByAle": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "html",
        "css",
        "javascript",
        "typescript",
        "vue",
        "go",
        "markdown",
        "json",
        "jsonc"
    ],
    "eslint.autoFixOnSave": true,
    "eslint.filetypes": [
        "javascript",
        "typescript",
        "vue",
        "javascript.jsx",
        "javascriptreact"
    ],
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "~/.config/nvim/conf/UltiSnips"
    ]
}
